<div class="container">

    <div class="row">
        <div class="col-md-3">
            {{!-- Empty --}}
        </div>
        <div class="col-md-6">
            <img src="assets/img/burger.png" alt="Burger">
            <h1 class="center title">Eat-Da-Burger!</h1>
        </div>
        <div class="col-md-3">
            {{!-- Empty --}}
        </div>
    </div>


    {{!-- Burgers --}}
    <div class="row">
        <div class="col-md-2">
            {{!-- Empty Col --}}
        </div>

        {{!-- Available Burgers --}}
        <div class="col-md-4 burgers">
            <h3 class="shadowed">Available Burgers</h3>

            {{#each burger}} {{#unless devoured}}
            <h6>
                {{burger_name}}
                <button class="devour" data-id="{{id}}" data-devoured="devoured">
                    Devour It!
                </button>
            </h6>
            {{/unless}} {{/each}}

        </div>

        {{!-- Eaten Burgers --}}
        <div class="col-md-4 burgers">
            <h3 class="shadowed">Eaten Burgers</h3>

            {{#each burger}} {{#if devoured}}
            <h6 class="text-muted">
                {{burger_name}}
            </h6>
            {{/if}} {{/each}}

        </div>


        <div class="col-md-2">
            {{!-- Empty Col --}}
        </div>
    </div>

    {{!-- Add Burger --}}
    <div class="row">
        <div class="col-md-3">
            {{!-- Empty Col --}}
        </div>
        <div class="col-md-6">
            <h3 class="shadowed">Add a Burger</h3>
            <form class="addBurger">
                <div class="form-row align-items-center">
                    <div class="col-auto">
                        <label for="burger">Burger Name:</label>
                        <input type="text" id="burger" name="name">
                    </div>
                    <div class="col-auto">
                        <button id="addBurger" type="submit">Add Burger</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3">
            {{!-- Empty Col --}}
        </div>
    </div>




</div>